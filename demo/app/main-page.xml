<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="onLoaded">
    <ActionBar title="Chart Samples" />

    <ListView rowHeight="50" items="{{ examples }}" itemTap="goToExample">
        <ListView.itemTemplate>
            <StackLayout class="item" orientation="horizontal" height="40">
                <Label paddingLeft="10" text="{{ $value.title }}" class="title" verticalAlignment="center" />
            </StackLayout>
        </ListView.itemTemplate>
    </ListView>
</Page>
