<Page xmlns="http://schemas.nativescript.org/tns.xsd" xmlns:chart="@nativescript-community/ui-chart" navigatedTo="onNavigatedTo">
    <ActionBar title="{{ title }}">
        <NavigationButton text="Back" android.systemIcon="ic_menu_back" tap="onNavigationButtonTap"/>
    </ActionBar>
    <ScrollView>
        <StackLayout>
        	<Button text="Redraw" tap="redraw" width="200"/>
            <chart:PieChart id="chart" width="300" height="350" loaded="onChartLoaded"/>
        </StackLayout>
    </ScrollView>
</Page>
